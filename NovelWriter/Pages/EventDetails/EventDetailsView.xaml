<UserControl x:Class="NovelWriter.Pages.EventDetails.EventDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:eventDetails="clr-namespace:NovelWriter.Pages.EventDetails"
             xmlns:controls="clr-namespace:NovelWriter.Controls"
             xmlns:controls1="clr-namespace:NovelWriter.Controls"
             mc:Ignorable="d" 
             Background="#373737" d:DataContext="{d:DesignInstance eventDetails:EventDetailsViewModel}">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource EditPanelTextBlock}" />
        <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource EditPanelTextBox}" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical">
            <TextBlock Text="Name:"/>
            <TextBox HorizontalAlignment="Stretch"
                     Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Orientation="Vertical">
            <TextBlock Text="Scene:"/>

            <ComboBox Margin="10, 0, 10, 5"
                      HorizontalAlignment="Left"
                      BorderThickness="1"
                      BorderBrush="White"
                      Padding="1"
                      Width="330"
                      ItemsSource="{Binding AvailableScenes}"
                      SelectedItem="{Binding SelectedScene, Mode=TwoWay}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Margin="5, 0, 30, 0"
                                   Text="{Binding Name}" 
                                   FontSize="16" 
                                   Foreground="Black" 
                                   VerticalAlignment="Center" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    Orientation="Vertical"
                    Visibility="{Binding CanEditSceneDetails, Converter={StaticResource IsVisible}}">
            <TextBlock Text="Scene Details:"/>

            <controls1:BulletListControl Height="400"
                                        Width="330"
                                        ReadOnly="False"
                                        Margin="10, 0, 10, 0"
                                        Text="{Binding SceneDetails, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
    </Grid>
</UserControl>
