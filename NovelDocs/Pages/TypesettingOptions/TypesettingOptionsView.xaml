<Window x:Class="NovelDocs.Pages.TypesettingOptions.TypesettingOptionsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:typesettingOptions="clr-namespace:NovelDocs.Pages.TypesettingOptions"
        mc:Ignorable="d"
        Title="Typesetting Options"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="Black" d:DataContext="{d:DesignInstance typesettingOptions:TypesettingOptionsViewModel }">
    <Grid>
        <Grid.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="White" />
                <Setter Property="Margin" Value="10" />
                <Setter Property="FontSize" Value="16" />
            </Style>

            <Style x:Key="FontComboBox" TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="5, 5, 10, 5" />
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Padding" Value="1"/>
                <Setter Property="Width" Value="400"/>
                <Setter Property="ItemsSource" Value="{Binding Fonts}" />
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock Margin="5, 0, 5, 0"
                                       Text="{Binding}"
                                       FontFamily="{Binding}"
                                       FontSize="16" 
                                       Foreground="Black" 
                                       VerticalAlignment="Center" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="FontSizeComboBox" TargetType="{x:Type ComboBox}">
                <Setter Property="Margin" Value="5" />
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="White"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="Padding" Value="1"/>
                <Setter Property="Width" Value="50"/>
                <Setter Property="ItemsSource" Value="{Binding FontSizes}" />
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock Margin="5, 0, 5, 0"
                                       Text="{Binding}" 
                                       FontSize="16" 
                                       Foreground="Black" 
                                       VerticalAlignment="Center" />
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Grid.Column="0"
                   Text="Title Font:"/>

        <ComboBox Grid.Row="0"
                  Grid.Column ="1"
                  SelectedItem="{Binding TitleFont, Mode=TwoWay}"
                  Style="{StaticResource FontComboBox}" />

        <!-- Header -->
        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Header Font:"/>

        <ComboBox Grid.Row="1"
                  Grid.Column ="1"
                  SelectedItem="{Binding HeaderFont, Mode=TwoWay}"
                  Style="{StaticResource FontComboBox}" />

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Header Font size:"/>

        <ComboBox Grid.Row="2"
                  Grid.Column ="1"
                  SelectedItem="{Binding HeaderFontSize, Mode=TwoWay}"
                  Style="{StaticResource FontSizeComboBox}" />

        <!-- Page Numbers -->
        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Page Numbers Font:"/>

        <ComboBox Grid.Row="3"
                  Grid.Column ="1"
                  SelectedItem="{Binding PageNumberFont, Mode=TwoWay}"
                  Style="{StaticResource FontComboBox}" />

        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Page Numbers Font size:"/>

        <ComboBox Grid.Row="4"
                  Grid.Column ="1"
                  SelectedItem="{Binding PageNumberFontSize, Mode=TwoWay}"
                  Style="{StaticResource FontSizeComboBox}" />

        <!-- Chapter Font -->
        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="Chapter Font:"/>

        <ComboBox Grid.Row="5"
                  Grid.Column ="1"
                  SelectedItem="{Binding ChapterFont, Mode=TwoWay}"
                  Style="{StaticResource FontComboBox}" />

        <!-- Body -->
        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="Body Font:"/>

        <ComboBox Grid.Row="6"
                  Grid.Column ="1"
                  SelectedItem="{Binding BodyFont, Mode=TwoWay}"
                  Style="{StaticResource FontComboBox}" />

        <TextBlock Grid.Row="7"
                   Grid.Column="0"
                   Text="Body Font size:"/>

        <ComboBox Grid.Row="7"
                  Grid.Column ="1"
                  SelectedItem="{Binding BodyFontSize, Mode=TwoWay}"
                  Style="{StaticResource FontSizeComboBox}" />


        <!-- Buttons -->
        <DockPanel Grid.Row="8"
                   Grid.Column="1"
                   LastChildFill="False">
            
            <Button DockPanel.Dock="Right"
                    Content="Cancel"
                    FontSize="16"
                    Margin="5"
                    Width="120"
                    IsCancel="True"/>

            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
            <Button DockPanel.Dock="Right" 
                    Content="Typeset Novel" 
                    FontSize="16"
                    Margin="5"
                    Width="120"
                    IsDefault="True"
                    Command="{Binding TypesetNovel}"/>
        </DockPanel>
    </Grid>
</Window>
